
<div class="login-main row-fluid">
  <div class="login">
    <h2>Login</h2>
    <form id="form-login" class="form">
      <div class="form-group">
        <input id="login-email" class="form-input" type="text" placeholder="Email" />
      </div>
      <div class="form-group">
        <input  id="login-password" class="form-input" type="password"placeholder="Password" />
      </div>
      <div class="form-group">
        <button class="btn btn-dark" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="signup">
    <h2>Sign Up</h2>
    <form id="form-signup" class="form">
      <div class="form-group">
        <input id="signup-name" class="form-input" type="text" placeholder="Name" />
      </div>
      <div class="form-group">
        <input id="signup-email" class="form-input" type="text" placeholder="Email" />
      </div>
      <div class="form-group">
        <input id="signuppassword" class="form-input" type="password" placeholder="Password [min 8 chars]" />
      </div>
      <div class="form-group">
        <button class="btn btn-dark" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>