
<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
    {{!-- posts --}}
      <h1 class="text-dark">{{title}}</h1>
      <div class="card custom-card-light">
        <p>{{content}}</p>
        <p class="text-muted">Posted by {{user.username}} on {{format_date createdAt}}</p>
      </div>
      <!-- Comment Form -->
      {{#if logged_in}}
        <form id="comment-form">
            <div class="form-group">
            <label for="comment">Leave a Comment:</label>
            <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>
      {{else}}
        <div id="div-login">
          <p class="text-dark">Please <a href="/login">log in</a> to leave a comment</p>
        </div>
      {{/if}}
        {{!-- comments --}}
      <h2 class="mt-4">Comments</h2>
      <ul class="list-unstyled" id="comments-list">
        {{#each comments}}
            <li class="card custom-card-light">
            <p>{{comment_text}}</p>
            <p class="text-muted">By {{user.username}} on {{format_date this.createdAt}}</p>
            </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<script src="/js/comment.js"></script>